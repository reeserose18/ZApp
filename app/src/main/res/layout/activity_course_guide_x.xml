<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnHome"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Higher Level Essay"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overview"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The HL essay is a 1,200-1,500 word formal essay that develops a line of inquiry of the student's choice, focusing on either a non-literary body of work or a literary work studied during the course. This component is worth 20% of the final grade."
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text Selection"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Students may choose any work studied in class, except:\n\n• Texts used for internal assessment\n• Works planned for Paper 2\n\nFor collections (short stories, poems, etc.), students should reference multiple texts from the chosen work. For non-literary texts, multiple texts from the same creator should be used."
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Line of Inquiry"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The line of inquiry should enable a broad literary or linguistic focus. Students can use the course's seven central concepts (Identity, Culture, Creativity, Communication, Perspective, Transformation, and Representation) as starting points. The inquiry should examine the work from a broad perspective rather than focusing on a narrow stylistic analysis."
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Essay Development"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The essay should:\n\n• Develop through planning, drafting, and revision\n• Demonstrate independent, critical thinking\n• Present a focused, analytical argument\n• Use detailed textual references to support arguments\n• Follow academic essay conventions\n• Include proper citations and references"
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teacher's Role"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teachers will:\n\n• Guide students in choosing appropriate texts and lines of inquiry\n• Monitor the essay's development\n• Provide feedback on plans and drafts\n• Help students maintain progress through timelines\n• Ensure academic honesty\n\nHowever, the final work must be entirely the student's own."
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Important Requirements"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The essay must:\n\n• State the line of inquiry clearly at the start\n• Identify the work/body of work and author/creator\n• Demonstrate knowledge of the entire work, not just sections\n• Use secondary sources appropriately (optional)\n• Stay within the 1,200-1,500 word limit\n• Be entirely original work"
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return to Home"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"/>

</RelativeLayout>