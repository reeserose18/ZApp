<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnHome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:text="IB English A: Language and Literature HL1\nSyllabus 2024-2025"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:text="Instructor Information: Mr. Zamora\nE-mail: pzamora@houstonisd.org\nConference Period: 1st and 6th"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:text="Required Texts:"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:text="Literary\n• Frankenstein: The 1818 Text, Mary Shelley (Penguin Classics)\n• The Collected Poetry of Nikki Giovanni: 1968-1998 (Harper Perennial Modern Classics)\n• Silence: A Novel, Shusaku Endo\n• Fiela's Child, Dalene Matthee\n• Ficciones, Jorge Luis Borges\n\nNon-Literary\n• The Smitten Kitchen (Food Blog by Deb Perelman)\n• Paintings/Sculpture by Kehinde Wiley\n• Political Cartoons by Joel Pett\n• Photography by Tom Hussey (Reflections series)\n• Additional non-literary texts TBD"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return to Home"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"/>

</RelativeLayout>