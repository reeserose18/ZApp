<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnHome"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paper 1: Guided Textual Analysis"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exam Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duration: 2 hours 15 minutes\nWeighting: 35%"
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exam Structure"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paper 1 contains two previously unseen non-literary passages. Students are instructed to write a separate guided analysis of each passage. Each passage will be from a different text type."
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guiding Question"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="One guiding question will be provided for each passage on a central technical or formal element. While not compulsory, students are expected to focus their analysis on a particular aspect of the text."
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scoring"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assessment criteria are the same at HL and SL:\n\n• 20 marks allotted to each answer\n• Maximum mark for paper 1 is 40"
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Learner Portfolio"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The learner portfolio is not specifically assessed but helps students prepare for formal assessment. It provides opportunities to:\n\n• Record responses to new passages\n• Formulate guiding questions\n• Track skill development\n• Record text types practiced\n• Monitor performance evolution"
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return to Home"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"/>

</RelativeLayout>