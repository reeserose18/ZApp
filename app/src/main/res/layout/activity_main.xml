<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zamora App"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnSyllabus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Syllabus"/>
    <Button
        android:id="@+id/btnCGW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course Guide W"/>
    <Button
        android:id="@+id/btnCGX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course Guide X"/>
    <Button
        android:id="@+id/btnCGY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course Guide Y"/>
    <Button
        android:id="@+id/btnCGZ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course Guide Z"/>
</LinearLayout>
