<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnHome"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paper 2: Comparative Essay"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exam Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duration: 1 hour 45 minutes\nWeighting: 25%\nExternal Assessment"
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exam Structure"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paper 2 contains four general questions. Students must:\n\n• Choose one question\n• Write a comparative essay\n• Reference two works studied during the course\n• Write without access to the studied works"
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Essay Requirements"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Students are expected to:\n\n• Compare and contrast two studied works\n• Ensure argument relevance to chosen question\n• Select appropriate works for the question\n• Make detailed references to works\n• Avoid direct quotations"
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Work Selection Guidelines"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Recommended: Preselect three works with teacher guidance\n• Cannot reuse works from other assessment components\n• Any studied work can potentially be used"
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scoring"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Maximum mark: 30\n• Assessment criteria shared by SL and HL\n• Same format for literature and language and literature courses"
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Learner Portfolio"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The portfolio helps students:\n\n• Group works by themes\n• Develop awareness of literary forms\n• Explore work combinations\n• Connect works to course exploration\n• Track performance evolution"
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return to Home"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"/>

</RelativeLayout>