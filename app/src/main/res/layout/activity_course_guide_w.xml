<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnHome"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IB Language A: Language and Literature"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="In IB Language and Literature, students explore texts through seven key concepts that guide their understanding and analysis. These concepts help organize learning and connect different areas of study."
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Identity"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1565C0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="When reading texts, students will encounter and interact with a multiplicity of perspectives, voices and characters. The relationship between an author and the different perspectives and voices they assume in the texts is frequently complex, making identity an elusive concept. Both writer and reader identities play crucial roles in interpretation."
                    android:textSize="15sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Culture"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1565C0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The concept of culture is central to the study of language and literature. It examines how texts relate to their production context, reception, and prevalent values. This includes understanding both the cultural context of creation and how texts interact with literary traditions."
                    android:textSize="15sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Creativity"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1565C0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Creativity is fundamental to both writing and reading. It involves understanding the role of imagination in writing and how readers engage imaginatively with texts to generate meanings beyond established interpretations. This concept also explores the importance of originality in text production and reception."
                    android:textSize="15sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Communication"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1565C0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This concept explores the relationship between writers and readers through texts. It examines how writing choices affect communication and how authors' assumptions about their audience influence their work. The concept also considers how reader engagement affects meaning-making."
                    android:textSize="15sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perspective"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1565C0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Texts present multiple viewpoints that may or may not reflect the author's views. Both texts and readers bring their own perspectives, which affect interpretation. The time and place of reading and writing also influence these perspectives significantly."
                    android:textSize="15sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transformation"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1565C0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This concept examines how texts connect and transform each other, and how reading itself transforms both text and reader. It explores intertextuality and how different interpretations can change a text's meaning and impact."
                    android:textSize="15sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Representation"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1565C0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This concept explores the relationship between literature and reality, from views advocating precise representation to those supporting complete artistic freedom. It examines how form and structure relate to meaning in texts."
                    android:textSize="15sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return to Home"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"/>

</RelativeLayout>